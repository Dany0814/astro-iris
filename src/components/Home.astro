---
import { Icon } from 'astro-icon'
export interface Props {
	title: string;
	description: string;
	body: string;
}

const { title, description, body } = Astro.props;
---
<div class="container mx-auto py-4rem">
	<div class="flex mx-auto h-671px bg-primary">
		<div class ="flex-col my-auto mx-24">
			<div class="text-7xl font-bold">
				<p class="text-violet-900">{title}</p>
				<p class="text-white">{description}</p>
			</div>
			<div class="text-3xl text-white pt-2rem">
				<a>{body}</a>
			</div>
			<div class="flex mx-auto py-4rem justify-center text-white text-center align-middle font-bold">
				<div class="flex mx-auto ">
					<Icon name="mdi:linkedin" class="mx-2rem w-10" />
					<p class="align-middle w-full h-full">Visítanos en Linkedin</p>
				</div>
				<div class="flex mx-auto">
					<Icon name="ic:baseline-discord" class="mx-2rem w-10" />
					<p class="align-middle w-full h-full">Únete a Discord</p>
				</div>
			</div>
		</div>
		<img class="mx-20" width="750px" src="/home.svg">
	</div>
</div>